
@{
    Layout = null;
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href="~/Content/toastr.css" rel="stylesheet" />
<link href="~/Content/toast.min.css" rel="stylesheet" />

<section class="vh-100" style="background-color: #212529;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-6 d-none d-md-block">
                            <img src="@Url.Content("~/Scripts/img/imgDeportiva.jpg")"
                                 alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;height:100% !important" />
                        </div>
                        <div class="col-md-6 col-lg-6 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black " style=" display: flex; justify-content: center;">

                                <form>

                                    <div class="d-flex align-items-center mb-5 pb-1">
                                        <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                        <span class="h1 fw-bold mb-0">SISTEMA DEPORTIVO</span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="idUsuario">Usuario</label>
                                        <input type="text" id="idUsuario" class="form-control form-control-lg" autocomplete="off" maxlength="20" />
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label class="form-label" for="idClave">Contraseña</label>
                                        <input type="password" id="idClave" class="form-control form-control-lg" autocomplete="off" maxlength="20" />
                                    </div>

                                    <div class="pt-1 mb-4">
                                        <button class="btn btn-dark btn-lg btn-block" type="button" id="btnLogin">Acceder</button>
                                    </div>

                                    <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                        ¿No tienes una cuenta?
                                        <a href="/Acceso/Registrar" style="color: #393f81;"> Registrate aquí</a>
                                    </p>

                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jquery")
<script>
        var _urlGeneral = '@Url.Content("~/")';
</script>
<script src="~/Scripts/scriptAcceso.js"></script>
<script src="~/Scripts/notify.js"></script>
<script src="~/Scripts/notify.min.js"></script>
<script src="~/Scripts/toast.min.js"></script>
<script src="~/Scripts/jquery.preloaders.js"></script>
<script src="~/Scripts/jquery.preloaders.min.js"></script>